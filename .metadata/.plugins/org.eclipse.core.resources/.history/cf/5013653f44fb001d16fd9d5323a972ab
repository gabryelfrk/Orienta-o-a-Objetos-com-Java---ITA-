
public class Carro {
	
	private int potencia;
	private int velocidade;
	private int velocidadeMaxima;
	private String nome;
	
	void acelarar() {
		velocidade += potencia;
	}
	
	void frear() {
		velocidade = velocidade / 2;
	}
	
	int getVelocidade() {
		return velocidade;
	}
	
//	void imprmir() {
//		System.out.println("O carro "+nome+" está a velocidade de "+getVelocidade()+" km/h");
//	}
}
