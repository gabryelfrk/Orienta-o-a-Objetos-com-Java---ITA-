import static org.junit.jupiter.api.Assertions.assertEquals;

import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;

class TesteCarro {
	
	Carro carro;
	
	@BeforeEach
	public void inicializaCarro() {
		carro = new Carro("teste", 10, 100);
	}
	
	@Test
	void testCarroParado() {
		assertEquals(0, carro.getVelocidade());
	}

	@Test
	void testAcelarar() {
		carro.acelarar();
		assertEquals(10, carro.getVelocidade());
	}
	
	@Test
	void testFrear() {
		carro.acelarar();
		carro.frear();
		assertEquals(5, carro.getVelocidade());
	}
	
	@Test
	void testFrearAteZero() {
		carro.acelarar();
		carro.frear();
		carro.frear();
		carro.frear();
		carro.frear();
		assertEquals(0, carro.getVelocidade());
	}
	
	@Test
	void testAcelararAteVelocidadeMaxima() {
		carro.acelarar();
		assertEquals(10, carro.getVelocidade());
	}

}
